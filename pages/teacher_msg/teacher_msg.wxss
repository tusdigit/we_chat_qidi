/* pages/teacher_msg/teacher_msg.wxss */
.head {
  width: 320px;
  height: 200px;
  display: flex;
  flex-direction: column;
}

.title {
  color: #000;
  text-shadow: 0px 1px 0px #c0c0c0,
                 0px 2px 0px #b0b0b0,
                 0px 3px 0px #a0a0a0,
                 0px 4px 0px #909090,
                 0px 5px 10px rgba(0, 0, 0, 0.6);
}

.table {
  border: 2px solid darkgray;
  width: 100%;
  height: 1000px;
  margin-top: 1rem;
  margin-right: 1rem;
  margin-left: 1rem;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td-1 {
  width: 30%;
  justify-content: center;
  display: flex;
  text-align: center;
  border-right: 2px solid #ddd;
  height: 100%;
}

.td-2 {
  width: 70%;
  justify-content: center;
  text-align: left;
  height: 100%;
  max-width: 100%;
  padding: 40rpx 0;
}

.bg-w {
  background: #afb4db;
}

.bg-g {
  background: #e6f3f9;
}

.bg-g2 {
  background: #fff;
}

.th {
  width: 30%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  border-right: 2px solid #ddd;
}

.th-2 {
  width: 70%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  max-height: 3rem;
  max-width: 80%;
}

.th-text {
  width: 80%;
  margin-top: 10px;
  justify-content: center;
  text-align: center;
  color: #000;
  display: block;
  height: 3rem;
  align-items: center;
  max-height: 3rem;
  max-width: 80%;
}

.weui-footer {
  margin-top:  100px;
}

.weui-footer_fixed-bottom {
  margin-bottom: 0;
}
