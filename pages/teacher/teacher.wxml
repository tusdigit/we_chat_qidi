<!--pages/teacher/teacher.wxml-->

<!--弹窗-->

<view class="modal-mask" bindtap="hideModal" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>

<view class="modal-dialog" wx:if="{{showModal}}">

  <view class="modal-title">信息修改</view>

  <view class="modal-content">

    <view class="modal-input">

      <input placeholder-class="input-holder" type='text' maxlength="10" bindinput="deptChange" class="input" placeholder="所属部门"></input>

    </view>

    <view class="modal-input">

      <input placeholder-class="input-holder" type="text" maxlength="10" bindinput="unitChange" class="input" placeholder="所属单位"></input>

    </view>

    <view class="modal-input">

      <input placeholder-class="input-holder" type="text" maxlength="10" bindinput="subChange" class="input" placeholder="学科"></input>

    </view>

    <view class="modal-input">

      <input placeholder-class="input-holder" type="text" maxlength="10" bindinput="sexChange" class="input" placeholder="性别"></input>

    </view>
    <view class="modal-input">

      <input placeholder-class="input-holder" type="number" maxlength="10" bindinput="ageChange" class="input" placeholder="年龄"></input>

    </view>
    <view class="modal-input">

      <input placeholder-class="input-holder" type="number" maxlength="10" bindinput="telChange" class="input" placeholder="电话"></input>

    </view>

  </view>

  <view class="modal-footer">

    <view class="btn-cancel" bindtap="onCancel" data-status="cancel">取消</view>

    <view class="btn-confirm" bindtap="onConfirm" data-status="confirm">确定</view>

  </view>

</view>
<view class='head'>
  <!-- <navigator url='/pages/next/next?type=private&name=隐私信息'> -->
  <view class='head-item' bindtap="multipleTap" bindlongtap="longTap" bindtouchstart="touchStart" bindtouchend="touchEnd">
    <image src='/images/teacher.jpg' mode='aspectFill'></image>
    <view>
      <view>
        <text>教师姓名：</text>
        <text>{{teacher_name}}</text>
      </view>
      <view>
        <text>擅长领域：</text>
        <text>{{teacher_skill}}</text>
      </view>
    </view>
  </view>
  <!-- </navigator> -->
  <navigator url='/pages/next/next?type=experience&name=职业经历'>
    <view class='head-item'>
      <text>职业经历</text>
      <image src='/images/arrow.jpg' mode='aspectFill'></image>
    </view>
  </navigator>
  <navigator url='/pages/next/next?type=awards&name=获得奖项'>
    <view class='head-item'>
      <text>获得奖项</text>
      <image src='/images/arrow.jpg' mode='aspectFill'></image>
    </view>
  </navigator>
  <navigator url='/pages/next/next?type=contribution&name=突出贡献'>
    <view class='head-item'>
      <text>突出贡献</text>
      <image src='/images/arrow.jpg' mode='aspectFill'></image>
    </view>
  </navigator>
  <navigator url='/pages/next/next?type=comments&name=评论'>
    <view class='head-item'>
      <text>评论</text>
      <image src='/images/arrow.jpg' mode='aspectFill'></image>
    </view>
  </navigator>
  <!-- <navigator url='/pages/next/next?type=summary&name=解答统计'> -->
  <view class='head-item' data-index='1' catchtap='panel'>
    <text>解答统计</text>
    <image src='/images/arrow.jpg' mode='aspectFill'></image>
  </view>
  <!-- </navigator> -->
  <navigator url='/pages/on_off_line/on_off_line?type=offline&name=线下预约历史'>
    <view id='hide_view' class='head-item' wx:if="{{showIndex == 1}}">
      <image src='/images/arrow.jpg' mode='aspectFill'></image>
      <text>线下预约历史</text>
    </view>
  </navigator>
  <navigator url='/pages/on_off_line/on_off_line?type=online&name=线上预约历史'>
    <view id='hide_view' class='head-item' wx:if="{{showIndex == 1}}">
      <image src='/images/arrow.jpg' mode='aspectFill'></image>
      <text>线上预约历史</text>
    </view>
  </navigator>
  <navigator url='/pages/feedback/feedback'>
    <view class='head-item'>
      <text>反馈</text>
      <image src='/images/arrow.jpg' mode='aspectFill'></image>
    </view>
  </navigator>
</view>